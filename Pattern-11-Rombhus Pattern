//Question is Print this pattern
//     ******    
//    ******   
//   ******  
//  ****** 

#include<iostream>
#include<cmath>
using namespace std;
int main()
{
  int n;
  cout<<"Enter your desired number : ";
  cin>>n;
  for(int i=n; i>=1; i--){
    for(int j=1; j<=i; j++){
      cout<<" ";
    }
    for(int j=1; j<=2*(n-1); j++){
      cout<<"*";
    }
    for(int j=1; j<=i; j++){
      cout<<" ";
    }
    cout<<endl;
  }
  return 0;
}
