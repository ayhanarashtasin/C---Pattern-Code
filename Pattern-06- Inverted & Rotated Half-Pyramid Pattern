//Question is Print this pattern
  //    *
  //   **
  //  ***
  // ****

#include<iostream>
#include<cmath>
using namespace std;
int main()
{
  int n;
  cout<<"Enter your desired number : ";
  cin>>n;
  for(int i=0; i<n; i++){
    //for spaces
    for(int j=0; j<=(n-i); j++){
      cout<<" ";
    }
    //for stars
    for(int j=0; j<=i; j++){
      cout<<"*";
    }
    cout<<endl;
  }
  return 0;
}
