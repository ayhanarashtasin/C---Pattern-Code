//Question is Print this pattern
//    1
//   212
//  32123
// 4321234
#include<iostream>
#include<cmath>
using namespace std;
int main()
{
  int n;
  cout<<"Enter your desired number : ";
  cin>>n;
  int value=1;
  for(int i=1; i<=n; i++){
    for(int j=1; j<=(n-i); j++){
      cout<<" ";
    }
    for(int j=i; j>=1; j--){
      cout<<j;
    }
    for(int j=2; j<=i ; j++){
      cout<< j;
    }
    cout<<endl;
  }
  return 0;
}
